<div class="container">
  <section id="main">
    {{#if articles}}
    <h2 class="center">Wired</h2>
    <div class="row">
      {{#each articles}}
        <div class="card">
          <div class="card-header" id="heading{{@index}}">
            <h3 class="mb-0">
              <button class="btn btn-link save" data-id={{this._id}}>
                <div class="d-flex justify-content-between">
                  <div>
                    <i class="fas fa-eye"></i> {{this.title}}
                  </div>
                 
                </div>
              </button>
            </h3>
          </div>
          <div id="collapse{{@index}}" class="collapse" aria-labelledby="heading{{@index}}" data-parent="#accordion">
            <div class="card-body">
              {{this.body}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    {{/if}}
  </section>
</div>